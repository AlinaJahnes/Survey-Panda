<div class="auth">
<%if session[:user_id]%>
  <%=button_to 'Log Out', logout_path, method: :delete%>
<%else%>
  <div class="login-form"><%=button_to 'Log In', login_path, form_class: "login", method: :get%></div>
  <div class="signup-form"><%=button_to 'Sign Up', signup_path, form_class: "signup", method: :get%></div>
<%end%>
</div>