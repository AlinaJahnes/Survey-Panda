<div id= "new_question_div">
  <%= form_tag survey_questions_path, class: "new_question_form", method: :post do %>
    <div class='question'>
      <%= label_tag 'Question'%>
      <%= text_field(:question, :name) %>
    </div>
    <div class='question possible_values'>
    <%= label_tag 'Possible Values'%>
      <% 3.times do %>
      <div class="possible_value"><%= text_field_tag 'possible_values[]' %></div>
      <% end %>
    </div>
    <%= submit_tag 'Add Question' %>
  <% end %>
</div>